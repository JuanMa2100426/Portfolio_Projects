-- Data cleaning project 

SELECT *
FROM layoffs;

-- 1. Remove duplicates 
-- 2. Standardize the data 
-- 3. Null values or blank values 
-- 4. Remove any column 


-- Creating a store data set 

CREATE TABLE layoffs_staging
LIKE layoffs;

SELECT *
FROM layoffs_staging;

INSERT layoffs_staging
SELECT *
FROM layoffs;

-- 1. REMOVE DUPLICATES 

--  creating row number to match it against all these columns 

SELECT *,
ROW_NUMBER() OVER(
PARTITION BY company, industry, total_laid_off, percentage_laid_off, `date`) as row_num
FROM layoffs_staging;

-- CTE with row number and partition by all the columns and filter to check the no unique values

WITH duplicate_cte AS
(
SELECT *,
ROW_NUMBER() OVER(
PARTITION BY company, location, 
industry, total_laid_off, percentage_laid_off, `date`, stage, 
country, funds_raised_millions) as row_num
FROM layoffs_staging
)
SELECT *
FROM duplicate_cte
WHERE row_num > 1;

-- just to confirm that those are the duplicate 

SELECT *
FROM layoffs_staging
WHERE company = 'oda';

-- once we do the partition by over every single column and fix our CTE, we check again

SELECT *
FROM layoffs_staging
WHERE company = 'casper';

-- Trying to delete (you can not update a CTE in MySql) 

WITH duplicate_cte AS
(
SELECT *,
ROW_NUMBER() OVER(
PARTITION BY company, location, 
industry, total_laid_off, percentage_laid_off, `date`, stage, 
country, funds_raised_millions) as row_num
FROM layoffs_staging
)
DELETE
FROM duplicate_cte
WHERE row_num > 1;

-- Creating a new table wiht the row_num column in order to delete the duplicate rows

CREATE TABLE `layoffs_staging2` (
  `company` text,
  `location` text,
  `industry` text,
  `total_laid_off` int DEFAULT NULL,
  `percentage_laid_off` text,
  `date` text,
  `stage` text,
  `country` text,
  `funds_raised_millions` int DEFAULT NULL,
  `row_num` INT
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci;

SELECT *
FROM layoffs_staging2;

-- inserting data in the new table that we just created 

INSERT INTO layoffs_staging2
SELECT *,
ROW_NUMBER() OVER(
PARTITION BY company, location, 
industry, total_laid_off, percentage_laid_off, `date`, stage, 
country, funds_raised_millions) as row_num
FROM layoffs_staging;

-- filtering and deleting 

SELECT *
FROM layoffs_staging2
WHERE row_num > 1;

DELETE 
FROM layoffs_staging2
WHERE row_num > 1;

-- 2. STANDARDIZING DATA 

-- looking for blank spaces

SELECT DISTINCT(company)
FROM layoffs_staging2;

SELECT DISTINCT(TRIM(company))
FROM layoffs_staging2;

-- using trim to get rid of these blank spaces

SELECT company, TRIM(company)
FROM layoffs_staging2;

UPDATE layoffs_staging2
SET company = TRIM(company);

-- checking some names that could mean the same

SELECT DISTINCT(industry)
FROM layoffs_staging2
ORDER BY 1;

SELECT *
FROM layoffs_staging2
WHERE industry LIKE 'crypto%' ;

UPDATE layoffs_staging2
SET industry = 'Crypto'
WHERE industry LIKE 'crypto%';

SELECT DISTINCT(industry)
FROM layoffs_staging2
ORDER BY 1;

-- no issues with this column 

SELECT DISTINCT(location)
FROM layoffs_staging2
ORDER BY 1;

SELECT DISTINCT(location)
FROM layoffs_staging2
ORDER BY 1;

-- united state dot issue 

SELECT DISTINCT (country)
FROM layoffs_staging2
ORDER BY 1;

SELECT *
FROM layoffs_staging2
WHERE country LIKE 'United States%';

-- using trailing to remove the dot at the end 

SELECT DISTINCT (country), TRIM(TRAILING '.' FROM country)
FROM layoffs_staging2
ORDER BY 1;

UPDATE layoffs_staging2
SET country = TRIM(TRAILING '.' FROM country)
WHERE country LIKE 'United State%'; 

SELECT `date`,
STR_TO_DATE(`date`, '%m/%d/%Y')
FROM layoffs_staging2;

UPDATE layoffs_staging2
SET `date` = STR_TO_DATE(`date`, '%m/%d/%Y');

SELECT `date`
FROM layoffs_staging2;

ALTER TABLE layoffs_staging2
MODIFY COLUMN `date` DATE; 

-- 3. NULL VALUES OR BLANK VALUES

-- possible columns useless for the project 

SELECT *
FROM layoffs_staging2
WHERE total_laid_off IS NULL
AND percentage_laid_off IS NULL; 

-- Before doing the join to populate those blank spaces, is better update those blank spaces to NULL

UPDATE layoffs_staging2
SET industry = NULL
WHERE industry = '';

-- checking nulls and blank spaces 

SELECT *
FROM layoffs_staging2
WHERE industry IS NULL 
OR industry = '';

-- checking other companies to see if they have multiples layoff that we can use to populate those NULL 

SELECT *
FROM layoffs_staging2
WHERE company = 'Airbnb' ;

-- join table to itself to populate those NULL spaces 

SELECT *
FROM layoffs_staging2 t1
JOIN layoffs_staging2 t2
	ON t1.company = t2.company 
WHERE (t1.industry IS NULL OR t1.industry = '')
AND t2.industry IS NOT NULL ;

-- chekcing the specific columns with blank and no blank spaces 

SELECT t1.industry, t2.industry 
FROM layoffs_staging2 t1
JOIN layoffs_staging2 t2
	ON t1.company = t2.company 
WHERE (t1.industry IS NULL OR t1.industry = '')
AND t2.industry IS NOT NULL ;
    
    
UPDATE layoffs_staging2 t1
JOIN layoffs_staging2 t2
	ON t1.company = t2.company
SET t1.industry = t2.industry
WHERE t1.industry IS NULL 
AND t2.industry IS NOT NULL ;

-- Unique company with no more row to populate the industry column

SELECT *
FROM layoffs_staging2
WHERE company LIKE 'Bally%' ;

-- 4) DELETING COLUMNS AND ROWS 

SELECT *
FROM layoffs_staging2 ;

-- deleting those columns useless for the project 

SELECT *
FROM layoffs_staging2
WHERE total_laid_off IS NULL
AND percentage_laid_off IS NULL ;

DELETE
FROM layoffs_staging2
WHERE total_laid_off IS NULL
AND percentage_laid_off IS NULL ;

SELECT *
FROM layoffs_staging2 ;

ALTER TABLE layoffs_staging2 
DROP COLUMN row_num;











